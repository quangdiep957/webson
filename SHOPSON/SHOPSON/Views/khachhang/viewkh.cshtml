@model List<SHOPSON.Areas.ADMIN.Models.KHACHHANG>
<div class="tab-pane fade active in" id="reviews">
    <div class="col-sm-12">
        <p><b>Đánh giá sản phẩm </b></p>
        @foreach (var item in Model)
        {
            <ul>
                <li><a href=""><i class="fa fa-user"></i>@item.EMAIL</a></li>
                <li><a href=""><i class="fa fa-clock-o"></i>@DateTime.Now</a></li>

            </ul>
            <p>@item.DANHGIA</p>


        }

        <form action="/khachhang/Edit" method="post">
            <span>
                <input type="text" placeholder="Họ và tên" name="MAKH" />
                <input type="email" placeholder="Email" name="email" />
            </span>
            <textarea name="mota"></textarea>
            <b>Rating: </b> <img src="images/product-details/rating.png" alt="" />
            <button type="submit" class="btn btn-default pull-right">
                Submit
            </button>
        </form>

    </div>
</div>
