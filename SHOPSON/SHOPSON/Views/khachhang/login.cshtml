
@model SHOPSON.Areas.ADMIN.Models.KHACHHANG
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body class="animsition">
    <div class="page-wrapper">
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="~/Areas/img/logo/loggo.jpg" alt="CoolAdmin" style="width:50px;height:50px">
                            </a>
                        </div>
                        <div class="login-form">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                                <div class="form-group">

                                    @Html.EditorFor(x => x.EMAIL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài khoản hoặc email" } })
                                    @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "text-danger", })

                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(x => x.PASSWORD, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                                    @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "text-danger", })
                                </div>
                                <div class="login-checkbox">
                                    <label>
                                        <input type="checkbox" name="remember">Remember Me
                                    </label>
                                    <label>
                                        <a href="#">Forgotten Password?</a>
                                    </label>
                                </div>
                                <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">sign in</button>
                                <div class="social-login-content">
                                    <div class="social-button">
                                        <button class="au-btn au-btn--block au-btn--blue m-b-20">sign in with facebook</button>
                                        <button class="au-btn au-btn--block au-btn--blue2">sign in with twitter</button>
                                    </div>
                                </div>
                            }
                            <div class="register-link">
                                <p>
                                    Don't you have account?
                                    <a href="#">Sign Up Here</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Jquery JS-->
    <script src="~/Areas/layout/vendor/jquery-3.2.1.min.js"></script>
    <!-- Bootstrap JS-->
    <script src="~/Areas/layout/vendor/bootstrap-4.1/popper.min.js"></script>
    <script src="~/Areas/layout/vendor/bootstrap-4.1/bootstrap.min.js"></script>
    <!-- Vendor JS       -->
    <script src="~/Areas/layout/vendor/slick/slick.min.js">
    </script>
    <script src="~/Areas/layout/vendor/wow/wow.min.js"></script>
    <script src="~/Areas/layout/vendor/animsition/animsition.min.js"></script>
    <script src="~/Areas/layout/vendor/bootstrap-progressbar/bootstrap-progressbar.min.js">
    </script>
    <script src="~/Areas/layout/vendor/counter-up/jquery.waypoints.min.js"></script>
    <script src="~/Areas/layout/vendor/counter-up/jquery.counterup.min.js">
    </script>
    <script src="~/Areas/layout/vendor/circle-progress/circle-progress.min.js"></script>
    <script src="~/Areas/layout/vendor/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/Areas/layout/vvendor/chartjs/Chart.bundle.min.js"></script>
    <script src="~/Areas/layout/vendor/select2/select2.min.js">
    </script>

    <!-- Main JS-->
    <script src="~/Areas/layout/js/main.js"></script>

</body>


