@model SHOPSON.Areas.ADMIN.Models.KHACHHANG
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập hoặc đăng ký</title>
    <link rel="shortcut icon" type="image/png" href="img/favi.png" />
    
    <link rel="stylesheet" type="text/css" href="~/Models/layout/css/log.css" />

</head>



    <body>
    
        <section id="form">
     
            <h2>ĐĂNG NHẬP HOẶC ĐĂNG KÝ TÀI KHOẢN SHOP SHON BOSS</h2>
            <div class="container" id="container">
                <div class="form-container sign-up-container">
                    @using (Html.BeginForm("Create", "khachhang", FormMethod.Post))
                    {
                        <h1>Tạo tài khoản</h1>
                        <span>Xin vui lòng điền các thông tin để đăng ký tài khoản</span>

                      
                         <div class="form-group">
                            @Html.EditorFor(x => x.TENKH, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tên khách hàng", @required = "required" } })
                            @Html.ValidationMessageFor(x => x.TENKH, null, new { @class = "text-danger", })
                        </div>

                        <div class="form-group">
                            @Html.EditorFor(x => x.EMAIL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài khoản hoặc email", @required = "required" } })
                            @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "text-danger", })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.PASSWORD, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" , @required = "required" } })
                            @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "text-danger", })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(x => x.SDT, new { htmlAttributes = new { @class = "form-control", @placeholder = "SDT" , @required = "required" } })
                            @Html.ValidationMessageFor(x => x.SDT, null, new { @class = "text-danger", })
                        </div>


                        <button type="submit" class="btn btn-default">Signup</button>


                    }
                </div>
                <div class="form-container sign-in-container">
                    @using (Html.BeginForm("login", "khachhang", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "text-danger"  })
                        <div class="form-group">
                            @Html.EditorFor(x => x.EMAIL, new { htmlAttributes = new { @class = "form-control", @placeholder = "Tài khoản hoặc email" ,@required = "required" } })
                            @Html.ValidationMessageFor(x => x.EMAIL, null, new { @class = "text-danger", })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(x => x.PASSWORD, new { htmlAttributes = new { @class = "form-control", @placeholder = "Password" } })
                            @Html.ValidationMessageFor(x => x.PASSWORD, null, new { @class = "text-danger", })
                        </div>
                        <div class="login-checkbox">
                            <label>
                                <input type="checkbox" name="remember">Remember Me
                            </label>
                            <label>
                                <a href="#">Forgotten Password?</a>
                            </label>
                        </div>
                        <button type="submit" class="btn btn-default">Login</button>

                    }
                </div>
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="overlay-panel overlay-left">
                            <h1>Chào mừng quý khách trở lại!</h1>
                            <p>Nếu bạn đã có tài khoản hãy đăng nhập để bắt đầu mua sắm online cùng chúng tôi!</p>
                            <button class="ghost" id="signIn">Đăng nhập tài khoản</button>
                        </div>
                        <div class="overlay-panel overlay-right">
                            <h1>Xin chào quý khách!</h1>
                            <p>Nhập thông tin của bạn để đăng nhập và bắt đầu mua sắm online với chúng tôi!</p>
                            <button class="ghost" id="signUp">Hoặc đăng ký tài khoản</button>
                        </div>
                    </div>
                </div>
            </div>
        </section><!--/form-->
        <a href="@Url.Action("Index","ADMIN/login")">Đăng nhập Admin</a>

        <script>
            const signUpButton = document.getElementById('signUp');
            const signInButton = document.getElementById('signIn');
            const container = document.getElementById('container');

            signUpButton.addEventListener('click', () => {
                container.classList.add('right-panel-active');
            });

            signInButton.addEventListener('click', () => {
                container.classList.remove('right-panel-active');
            });
        </script>
        <script src="~/Models/layout/js/jquery.js"></script>
        <script src="~/Models/layout/js/price-range.js"></script>
        <script src="~/Models/layout/js/jquery.scrollUp.min.js"></script>
        <script src="~/Models/layout/js/bootstrap.min.js"></script>
        <script src="~/Models/layout/js/jquery.prettyPhoto.js"></script>
        <script src="~/Models/layout/js/main.js"></script>
    </body>
</html>




