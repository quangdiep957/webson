
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ADMIN/Views/Shared/_Layout.cshtml";
}

@model SHOPSON.Areas.ADMIN.Models.imgcon

@using (Html.BeginForm("Create", "imgcon", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div class="form-group">
        @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "text" } })
            @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MASP, "MASP", htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            @Html.DropDownList("MASP", null, htmlAttributes: new { @class = "text" })
            @Html.ValidationMessageFor(model => model.MASP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.IMG1, htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            <input type="file" name="img1" />

        </div>
        @Html.LabelFor(model => model.IMG2, htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            <input type="file" name="img2" />

        </div>
        @Html.LabelFor(model => model.IMG3, htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            <input type="file" name="img3" />
        </div>
        @Html.LabelFor(model => model.IMG4, htmlAttributes: new { @class = "lable_chu" })
        <div class="col-md-10">
            <input type="file" name="img4" />

        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-success" />
        </div>
    </div>
 
}







